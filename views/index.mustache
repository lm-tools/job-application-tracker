{{<layout}}

  {{$applicationContent}}

    <h2 class="heading-xlarge">Track your job applications</h2>

    <a href="/roles/new" class="button">+ Add a job application</a>

    <section class="space-top-double">
      <ul>
        {{#roles}}
        <li>
          <div class="grid-row">
            <div class="column-three-quarter">
              <a href="#" class="box box-link box-fixed-height">
                <div class="grid-row">
                  <div class="column-three-quarter">
                    <h4 class="bold-small">{{title}}</h4>
                    <p class="color-text">{{employer}}</p>
                  </div>
                  <div class="column-one-quarter color-text center">{{status}}</div>
                </div>
              </a>
            </div>
            <div class="column-one-quarter">
              <form method="POST" class="box box-fixed-height box-min-padding center">
                <input type="hidden" name="id" value="{{id}}">
                <input type="hidden" name="state" value="{{state}}">

                    {{stateQuestion}}

                    {{#hasAction}}
                    <div class="action-buttons center">
                      <input type="submit" name="action" value="yes" class="button button-secondary">
                      <input type="submit" name="action" value="no" class="button button-secondary">
                    </div>
                    {{/hasAction}}
              </form>
            </div>
          </div>

        </li>
        {{/roles}}
      </ul>
    </section>


  {{/applicationContent}}

{{/layout}}
